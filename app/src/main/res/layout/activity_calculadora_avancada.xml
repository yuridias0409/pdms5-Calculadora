<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="#000000"
    tools:context=".CalculadoraAvancadaActivity">

    <ScrollView
        android:id="@+id/calc_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:id="@+id/calc_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/calc_conta_tv"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/calc_resultado_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="0"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="64dp" />

            <LinearLayout
                android:id="@+id/calc_first_line_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/calc_raiz_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/roundedbutton"
                    android:text="√"
                    android:textSize="42dp"
                    android:onClick="onClick"
                    app:backgroundTint="#ff9503"
                    app:cornerRadius="20px" />

                <Button
                    android:id="@+id/calc_potencia_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="^"
                    android:textSize="42dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background = "@drawable/roundedbutton"
                    android:onClick="onClick"
                    app:backgroundTint="#ff9503"
                    app:cornerRadius="20px"
                    />

                <Button
                    android:id="@+id/calc_porcentagem_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="%"
                    android:textSize="42dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background = "@drawable/roundedbutton"
                    android:onClick="onClick"
                    app:backgroundTint="#ff9503"
                    app:cornerRadius="20px"
                    />

                <Button
                    android:id="@+id/calc_divisao_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="÷"
                    android:textSize="42dp"
                    android:background = "@drawable/roundedbutton"
                    android:onClick="onClick"
                    app:backgroundTint="#ff9503"
                    app:cornerRadius="20px"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/calc_second_line_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/calc_sete_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/roundedbutton"
                    android:text="7"
                    android:textSize="42dp"
                    android:onClick="onClick"
                    app:backgroundTint="#343434"
                    app:cornerRadius="20px" />

                <Button
                    android:id="@+id/calc_oito_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="8"
                    android:textSize="42dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background = "@drawable/roundedbutton"
                    android:onClick="onClick"
                    app:backgroundTint="#343434"
                    app:cornerRadius="20px"
                    />

                <Button
                    android:id="@+id/calc_nove_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="9"
                    android:textSize="42dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background = "@drawable/roundedbutton"
                    android:onClick="onClick"
                    app:backgroundTint="#343434"
                    app:cornerRadius="20px"
                    />

                <Button
                    android:id="@+id/calc_multiplicacao_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="X"
                    android:textSize="42dp"
                    android:background = "@drawable/roundedbutton"
                    android:onClick="onClick"
                    app:backgroundTint="#ff9503"
                    app:cornerRadius="20px"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/calc_third_line_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/calc_quatro_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/roundedbutton"
                    android:text="4"
                    android:textSize="42dp"
                    android:onClick="onClick"
                    app:backgroundTint="#343434"
                    app:cornerRadius="20px" />

                <Button
                    android:id="@+id/calc_cinco_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="42dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background = "@drawable/roundedbutton"
                    android:onClick="onClick"
                    app:backgroundTint="#343434"
                    app:cornerRadius="20px"
                    />

                <Button
                    android:id="@+id/calc_seis_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6"
                    android:textSize="42dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background = "@drawable/roundedbutton"
                    android:onClick="onClick"
                    app:backgroundTint="#343434"
                    app:cornerRadius="20px"
                    />

                <Button
                    android:id="@+id/calc_menos_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="42dp"
                    android:background = "@drawable/roundedbutton"
                    android:onClick="onClick"
                    app:backgroundTint="#ff9503"
                    app:cornerRadius="20px"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/calc_fourth_line_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/calc_um_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/roundedbutton"
                    android:text="1"
                    android:textSize="42dp"
                    android:onClick="onClick"
                    app:backgroundTint="#343434"
                    app:cornerRadius="20px" />

                <Button
                    android:id="@+id/calc_dois_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="42dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background = "@drawable/roundedbutton"
                    android:onClick="onClick"
                    app:backgroundTint="#343434"
                    app:cornerRadius="20px"
                    />

                <Button
                    android:id="@+id/calc_tres_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="42dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background = "@drawable/roundedbutton"
                    android:onClick="onClick"
                    app:backgroundTint="#343434"
                    app:cornerRadius="20px"
                    />

                <Button
                    android:id="@+id/calc_mais_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+"
                    android:textSize="42dp"
                    android:background = "@drawable/roundedbutton"
                    android:onClick="onClick"
                    app:backgroundTint="#ff9503"
                    app:cornerRadius="20px"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/calc_fifth_line_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/calc_zero_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/roundedbutton"
                    android:text="0"
                    android:textSize="42dp"
                    android:onClick="onClick"
                    app:backgroundTint="#343434"
                    app:cornerRadius="20px" />

                <Button
                    android:id="@+id/calc_ponto_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="."
                    android:textSize="42dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background = "@drawable/roundedbutton"
                    android:onClick="onClick"
                    app:backgroundTint="#343434"
                    app:cornerRadius="20px"
                    />

                <Button
                    android:id="@+id/calc_c_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C"
                    android:textSize="42dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background = "@drawable/roundedbutton"
                    android:onClick="onClick"
                    app:backgroundTint="#a6a6a6"
                    app:cornerRadius="20px"
                    />

                <Button
                    android:id="@+id/calc_igual_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="="
                    android:textSize="42dp"
                    android:background = "@drawable/roundedbutton"
                    android:onClick="onClick"
                    app:backgroundTint="#ff9503"
                    app:cornerRadius="20px"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>